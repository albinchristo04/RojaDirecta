</Layout>

<style>
    .player-container {
        margin-top: 2rem;
        background: #111;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #333;
    }

    .vpn-notice {
        background: #1a1a1a;
        padding: 1rem;
        border-bottom: 1px solid #333;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        text-align: center;
    }

    .vpn-text {
        font-size: 0.9rem;
        color: #eee;
    }

    .vpn-links {
        display: flex;
        gap: 0.5rem;
        margin-top: 0.5rem;
        justify-content: center;
    }

    .vpn-btn {
        padding: 4px 12px;
        border-radius: 4px;
        font-size: 0.8rem;
        font-weight: 700;
        text-decoration: none;
        color: white;
    }

    .ios { background: #007aff; }
    .android { background: #3ddc84; color: #000; }

    .support-link {
        font-size: 0.85rem;
        color: #ffc107;
    }

    .support-link a {
        color: #ffc107;
        font-weight: 700;
        text-decoration: underline;
    }

    .player-header {

        background: #222;
        color: #ffc107;
        padding: 1rem;
        font-weight: 800;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        border-bottom: 1px solid #333;
    }

    .live-dot {
        width: 12px;
        height: 12px;
        background: #d32f2f;
        border-radius: 50%;
        display: inline-block;
        animation: blink 1s infinite;
    }

    @keyframes blink {
        0% { opacity: 1; }
        50% { opacity: 0.3; }
        100% { opacity: 1; }
    }

    .player-wrapper {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 Aspect Ratio */
        background: #000;
    }

    .player-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .unmute-overlay {
        position: absolute;
        top: 20px;
        left: 20px;
        z-index: 10;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 8px 16px;
        border: 1px solid white;
        font-weight: 700;
        font-size: 0.8rem;
        cursor: pointer;
    }

    .no-stream {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
    }

    .channel-selector {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        padding: 1rem;
        background: #1a1a1a;
        justify-content: center;
    }

    .channel-btn {
        background: #d32f2f;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-weight: 700;
        cursor: pointer;
        min-width: 120px;
        transition: background 0.2s;
    }

    .channel-btn:hover {
        background: #b71c1c;
    }

    .channel-btn.active {
        background: #ffc107;
        color: black;
    }

    .match-info {
        margin-top: 3rem;
    }

    .content-box {
        padding: 2rem;
        border-radius: 8px;
        background: white;
        color: #333;
        border-left: 5px solid #d32f2f;
    }

    .content-box h2 {
        margin-bottom: 1rem;
        color: #d32f2f;
    }

    .content-box p {
        color: #666;
        margin-bottom: 1rem;
    }

    .share-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 1.5rem;
        background: #111;
        border-top: 1px solid #333;
    }

    .share-container span {
        font-weight: 800;
        font-size: 0.8rem;
        color: #ffc107;
    }

    .share-btn {
        padding: 8px 20px;
        border-radius: 4px;
        font-weight: 700;
        font-size: 0.85rem;
        color: white;
        transition: transform 0.1s;
    }

    .share-btn:active {
        transform: scale(0.95);
    }

    .telegram {
        background: #0088cc;
    }

    .whatsapp {
        background: #25d366;
    }

    .embed-section {
        padding: 1.5rem;
        background: #1a1a1a;
        border-top: 1px solid #333;
    }

    .embed-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .embed-header span {
        font-weight: 800;
        font-size: 0.8rem;
        color: #ffc107;
    }

    .copy-btn {
        background: #333;
        color: white;
        border: 1px solid #444;
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.2s;
    }

    .copy-btn:hover {
        background: #444;
        border-color: #ffc107;
    }

    #embed-code {
        width: 100%;
        height: 60px;
        background: #000;
        color: #888;
        border: 1px solid #333;
        border-radius: 4px;
        padding: 10px;
        font-family: monospace;
        font-size: 0.75rem;
        resize: none;
        outline: none;
    }

    @media (max-width: 600px) {
        .share-container {
            flex-direction: column;
            gap: 0.75rem;
        }
        .share-btn {
            width: 100%;
            text-align: center;
        }
    }
</style>

<script>
    const player = document.getElementById('main-player');
    const buttons = document.querySelectorAll('.channel-btn');
    const unmuteBtn = document.getElementById('unmute-btn');

    buttons.forEach(btn => {
        btn.addEventListener('click', () => {
            const url = btn.getAttribute('data-url');
            if (player && url) {
                player.src = url;
                buttons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
            }
        });
    });

    if (unmuteBtn) {
        unmuteBtn.addEventListener('click', () => {
            unmuteBtn.style.display = 'none';
        });
        // Auto hide after 10 seconds if not clicked
        setTimeout(() => {
            unmuteBtn.style.display = 'none';
        }, 10000);
    }

    const copyBtn = document.getElementById('copy-embed');
    const embedTextarea = document.getElementById('embed-code') as HTMLTextAreaElement;

    if (copyBtn && embedTextarea) {
        copyBtn.addEventListener('click', () => {
            embedTextarea.select();
            document.execCommand('copy');
            copyBtn.textContent = 'Copied!';
            setTimeout(() => {
                copyBtn.textContent = 'Copy Code';
            }, 2000);
        });
    }
</script>
