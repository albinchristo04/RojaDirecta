---
import Layout from '../../layouts/Layout.astro';
import { getMatches } from '../../utils/data';
import { getRotatingTitle } from '../../utils/seo';

export async function getStaticPaths() {
  const matches = await getMatches();
  return matches.map((match) => ({
    params: { slug: match.slug },
    props: { match, allMatches: matches },
  }));
}

const { match } = Astro.props;

const title = getRotatingTitle(match.title, 'match');
const description = `Ver ${match.title} en vivo gratis hoy. Sigue el partido de ${match.league} online con los mejores canales de streaming en Roja Directa En Vivo.`;

const initialStream = match.channels.length > 0 ? match.channels[0].decoded_url : '';
---

<Layout 
  title={title} 
  description={description}
  headerTitle={`WATCH ${match.title.toUpperCase()} LIVE`}
>
  <div class="container">
    <div class="player-container">
        <div class="player-header">
            <span class="live-dot"></span>
            LIVE: {match.title}
        </div>
        
        <div class="player-wrapper">
            <div class="unmute-overlay" id="unmute-btn">
                CLICK UNMUTE STREAM
            </div>
            {initialStream ? (
                <iframe 
                    id="main-player"
                    src={initialStream} 
                    frameborder="0" 
                    allowfullscreen 
                    scrolling="no"
                ></iframe>
            ) : (
                <div class="no-stream">No stream available for this match yet.</div>
            )}
        </div>

        <div class="channel-selector">
            {match.channels.map((channel, index) => (
                <button 
                    class={`channel-btn ${index === 0 ? 'active' : ''}`}
                    data-url={channel.decoded_url}
                >
                    {channel.name || `Channel ${index + 1}`}
                </button>
            ))}
        </div>

        <div class="share-container">
            <span>COMPARTIR:</span>
            <a 
                href={`https://t.me/share/url?url=${encodeURIComponent(`https://www.rojadirectaenvivo.live/partido/${match.slug}/`)}&text=${encodeURIComponent(`âš½ï¸ VER EN VIVO: ${match.title}\n\nDisfruta del partido gratis aquÃ­ ðŸ‘‡`)}`} 
                target="_blank" 
                class="share-btn telegram"
            >
                Telegram
            </a>
            <a 
                href={`https://api.whatsapp.com/send?text=${encodeURIComponent(`âš½ï¸ VER EN VIVO: ${match.title}\n\nDisfruta del partido gratis aquÃ­ ðŸ‘‡\nhttps://www.rojadirectaenvivo.live/partido/${match.slug}/`)}`} 
                target="_blank" 
                class="share-btn whatsapp"
            >
                WhatsApp
            </a>
        </div>
    </div>

    <section class="match-info">
        <div class="glass content-box">
            <h2>About this match: {match.title}</h2>
            <p>
                You are watching <strong>{match.title}</strong> live stream. This event is part of <strong>{match.league}</strong>. 
                Our platform provides the best quality links for free sports streaming.
            </p>
            <p>
                If the current channel is not working, please try the alternative options provided below the player. 
                We recommend a stable internet connection for the best experience.
            </p>
        </div>
    </section>
  </div>
</Layout>

<style>
    .player-container {
        margin-top: 2rem;
        background: #111;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #333;
    }

    .player-header {
        background: #222;
        color: #ffc107;
        padding: 1rem;
        font-weight: 800;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        border-bottom: 1px solid #333;
    }

    .live-dot {
        width: 12px;
        height: 12px;
        background: #d32f2f;
        border-radius: 50%;
        display: inline-block;
        animation: blink 1s infinite;
    }

    @keyframes blink {
        0% { opacity: 1; }
        50% { opacity: 0.3; }
        100% { opacity: 1; }
    }

    .player-wrapper {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 Aspect Ratio */
        background: #000;
    }

    .player-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .unmute-overlay {
        position: absolute;
        top: 20px;
        left: 20px;
        z-index: 10;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 8px 16px;
        border: 1px solid white;
        font-weight: 700;
        font-size: 0.8rem;
        cursor: pointer;
    }

    .no-stream {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
    }

    .channel-selector {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        padding: 1rem;
        background: #1a1a1a;
        justify-content: center;
    }

    .channel-btn {
        background: #d32f2f;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-weight: 700;
        cursor: pointer;
        min-width: 120px;
        transition: background 0.2s;
    }

    .channel-btn:hover {
        background: #b71c1c;
    }

    .channel-btn.active {
        background: #ffc107;
        color: black;
    }

    .match-info {
        margin-top: 3rem;
    }

    .content-box {
        padding: 2rem;
        border-radius: 8px;
        background: white;
        color: #333;
        border-left: 5px solid #d32f2f;
    }

    .content-box h2 {
        margin-bottom: 1rem;
        color: #d32f2f;
    }

    .content-box p {
        color: #666;
        margin-bottom: 1rem;
    }

    .share-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 1.5rem;
        background: #111;
        border-top: 1px solid #333;
    }

    .share-container span {
        font-weight: 800;
        font-size: 0.8rem;
        color: #ffc107;
    }

    .share-btn {
        padding: 8px 20px;
        border-radius: 4px;
        font-weight: 700;
        font-size: 0.85rem;
        color: white;
        transition: transform 0.1s;
    }

    .share-btn:active {
        transform: scale(0.95);
    }

    .telegram {
        background: #0088cc;
    }

    .whatsapp {
        background: #25d366;
    }

    @media (max-width: 600px) {
        .share-container {
            flex-direction: column;
            gap: 0.75rem;
        }
        .share-btn {
            width: 100%;
            text-align: center;
        }
    }
</style>

<script>
    const player = document.getElementById('main-player');
    const buttons = document.querySelectorAll('.channel-btn');
    const unmuteBtn = document.getElementById('unmute-btn');

    buttons.forEach(btn => {
        btn.addEventListener('click', () => {
            const url = btn.getAttribute('data-url');
            if (player && url) {
                player.src = url;
                buttons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
            }
        });
    });

    if (unmuteBtn) {
        unmuteBtn.addEventListener('click', () => {
            unmuteBtn.style.display = 'none';
        });
        // Auto hide after 10 seconds if not clicked
        setTimeout(() => {
            unmuteBtn.style.display = 'none';
        }, 10000);
    }
</script>
