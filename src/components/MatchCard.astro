---
import type { Match } from '../utils/data';

interface Props {
	match: Match;
}

const { match } = Astro.props;
---

<a href={`/partido/${match.slug}/`} class="match-card">
    <div class="match-time">{match.time}</div>
    <div class="match-icon">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
            <path d="M21,3H3C1.89,3 1,3.89 1,5V17A2,2 0 0,0 3,19H8V21H16V19H21A2,2 0 0,0 23,17V5C23,3.89 22.1,3 21,3M21,17H3V5H21V17Z" />
        </svg>
    </div>
    <div class="match-title">{match.title}</div>
    <div class="match-action">VIEW CHANNELS Â»</div>
</a>

<style>
    .match-card {
        display: grid;
        grid-template-columns: 80px 40px 1fr auto;
        align-items: center;
        background: white;
        color: black;
        padding: 0.75rem 1rem;
        border-bottom: 1px solid #eee;
        transition: background 0.2s;
    }

    .match-card:hover {
        background: #f9f9f9;
    }

    .match-time {
        background: #222;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-weight: 700;
        font-size: 0.85rem;
        text-align: center;
    }

    .match-icon {
        display: flex;
        justify-content: center;
        color: #555;
    }

    .match-title {
        font-weight: 600;
        font-size: 0.95rem;
        padding: 0 1rem;
    }

    .match-action {
        color: #d32f2f;
        font-weight: 800;
        font-size: 0.8rem;
    }

    @media (max-width: 600px) {
        .match-card {
            grid-template-columns: 70px 30px 1fr;
        }
        .match-action {
            display: none;
        }
    }
</style>
