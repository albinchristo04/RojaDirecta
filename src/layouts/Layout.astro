---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	canonical?: string;
	schema?: any[];
    headerTitle?: string;
}

const { 
	title, 
	description = "Ver fútbol en vivo gratis hoy. Roja Directa TV, Pirlo TV, Tarjeta Roja y más canales deportivos online.",
	canonical = "https://www.rojadirectaenvivo.live/",
	schema = [],
    headerTitle = "ROJA DIRECTA EN VIVO - FÚTBOL HOY"
} = Astro.props;

const defaultSchema = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": "Roja Directa En Vivo",
	"url": "https://www.rojadirectaenvivo.live/",
	"potentialAction": {
		"@type": "SearchAction",
		"target": "https://www.rojadirectaenvivo.live/search?q={search_term_string}",
		"query-input": "required name=search_term_string"
	}
};

const breadcrumbSchema = {
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [
		{
			"@type": "ListItem",
			"position": 1,
			"name": "Inicio",
			"item": "https://www.rojadirectaenvivo.live/"
		}
	]
};

const allSchemas = [defaultSchema, breadcrumbSchema, ...schema];
---

